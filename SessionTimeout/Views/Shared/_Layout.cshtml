<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Application name", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                </ul>
            </div>
        </div>
    </div>

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>
    <script src="~/Scripts/jquery-1.10.2.js"></script>
    <script src="~/Scripts/bootstrap.js"></script>
    <script src="~/Scripts/bootstrap-session-timeout.js"></script>
    <script>
        $.sessionTimeout({
            // زمانی که کاربر دکمه خروج را کلیک نماید این اکشن فراخوانی می شود
            logoutUrl: '/Home/LogOff',
            // زمانی که زمان به پایان برسید و کاربر همچنان بر دیالوگ ماندن در صفجه کلیک نکند به صورت
            // اتوماتیک به این اکشن هدایت خواهد شد
            redirUrl: '/Home/LogOff',
            // مدت زمان تا نمایش دیالوگ
            warnAfter: @System.Configuration.ConfigurationManager.AppSettings["warnAfter"],
            // مدت زمان
            // warnAfter
            // به علاوه مدت زمان مشخص دیگری که کاربر می تواند دیالوگ ماندن در صفحه را مشاهده کند
            redirAfter: @System.Configuration.ConfigurationManager.AppSettings["redirAfter"],
            // نمایش مدت زمان باقی مانده
            countdownBar: true
        });
    </script>
</body>
</html>